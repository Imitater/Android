<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.ruiyihong.toyshop.view.CircleImageView
            android:id="@+id/giv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/personinfo_head_icon"
            app:civ_border_overlay="false"
            app:civ_border_width="1dp"
            app:civ_fill_color="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_username"
            android:textSize="@dimen/item_size"
            android:textColor="@color/grad_dark"
            android:layout_margin="10dp"
            android:text="爱***112"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/share"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_age"
        android:layout_marginTop="7dp"
        android:textSize="@dimen/small_size"
        android:textColor="@color/grad_dark"
        android:text="适合年龄：0-36个月"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_pinglun"
        android:layout_marginTop="7dp"
        android:textSize="@dimen/item_size"
        android:textColor="@color/black"
        android:text="经济快递。。。很好的环境"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <GridView
        android:id="@+id/gv_pinglun"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></GridView>

</LinearLayout>