<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <RelativeLayout
        style="@style/title_style">
        <ImageButton
            style="@style/back_style" />
        <TextView
            style="@style/title_textview_style"
            android:text="我的优惠劵"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grad_light"/>
    <RadioGroup
        android:id="@+id/rg_youhui"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <RadioButton
            android:id="@+id/rb_youhui_used"
            android:padding="10dp"
            style="@style/MainRadioButtonStyle"
            android:text="可用优惠劵"/>

        <View
            android:layout_width="1dp"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:background="@color/grad_light"/>
        <RadioButton
            android:id="@+id/rb_youhui_history"
            android:padding="10dp"
            style="@style/MainRadioButtonStyle"
            android:text="历史优惠劵"/>
    </RadioGroup>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp">

        <ImageView
            android:id="@+id/iv_youhui_line_used"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/blue_dark"/>

        <ImageView
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:id="@+id/iv_youhui_line_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/blue_dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="@dimen/youhuitiao_width"
        android:layout_height="40dp"
        android:background="@drawable/bg_amount_layout"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_youhui_accode"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="@dimen/item_size"
            android:hint="请输入优惠码"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grad_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="领取"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/item_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="@dimen/youhuitiao_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共有"
            android:textSize="@dimen/small_size"/>
        <TextView
            android:id="@+id/tv_mine_prefer_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/small_size"
            android:textColor="@color/red_light"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="张可用"
            android:textSize="@dimen/small_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用说明"
            android:textSize="@dimen/small_size"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_youhui"
        android:layout_width="@dimen/youhuitiao_width"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/ll_youhui"
        android:layout_width="@dimen/youhuitiao_width"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/no_youhui"/>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有找到优惠劵"
            android:textSize="@dimen/item_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享好友可获得优惠劵"
            android:textSize="@dimen/item_size"/>
    </LinearLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="@dimen/youhuitiao_width"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_amount_layout">
        <TextView
            android:id="@+id/tv_youhui_more"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/youhui_icon"
            android:text="更多优惠券,等你来领"/>
        <ImageView
            android:layout_toRightOf="@id/tv_youhui_more"
            android:layout_marginLeft="20dp"
            android:id="@+id/iv_youhui_more"
            android:layout_centerVertical="true"
            android:background="@mipmap/goto_right"
            android:layout_width="15dp"
            android:layout_height="13dp" />

    </RelativeLayout>
</LinearLayout>