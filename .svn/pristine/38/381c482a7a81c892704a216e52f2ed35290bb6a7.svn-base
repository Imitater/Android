<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        style="@style/title_style">
        <ImageButton
            style="@style/back_style"/>
        <TextView
            android:text="我的订单"
            style="@style/title_textview_style"/>
    </RelativeLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/hor_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/tab_selected"
                android:id="@+id/ll_order_unpay"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"/>
            <View
                android:id="@+id/line_order_unpay"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/tab_selected"
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grad_dark"
                android:id="@+id/ll_order_unfahuo"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"/>
            <View
                android:visibility="invisible"
                android:id="@+id/line_order_unfahuo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/tab_selected"
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ll_order_backed"
                android:textColor="@color/grad_dark"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去归还"/>
            <View
                android:visibility="invisible"
                android:id="@+id/line_order_backed"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/tab_selected"
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grad_dark"
                android:id="@+id/ll_order_get"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已归还"/>
            <View
                android:visibility="invisible"
                android:id="@+id/line_order_get"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/tab_selected"
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/grad_dark"
                android:id="@+id/ll_order_untalk"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"/>
            <View
                android:visibility="invisible"
                android:id="@+id/line_order_untalk"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/tab_selected"
                android:layout_width="wrap_content"
                android:layout_height="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:background="@color/Panda_BG"
        android:id="@+id/vp_order_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>