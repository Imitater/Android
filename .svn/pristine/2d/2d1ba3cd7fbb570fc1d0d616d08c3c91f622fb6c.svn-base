<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ruiyihong.toyshop.view.MyScrollView
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="100dp"
                android:id="@+id/iv_login_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/loginlogo"/>


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_name"
                android:textColor="@color/blue_dark"
                android:textSize="@dimen/title_size"
                tools:layout_editor_absoluteY="168dp"
                tools:layout_editor_absoluteX="113dp" />
            <AutoCompleteTextView
                android:inputType="number"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:id="@+id/act_login_username"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:hint="手机号/邮箱登录"
                android:textSize="@dimen/item_size" />
            <View
                android:layout_width="235dp"
                android:layout_height="1dp"
                android:background="@color/blue_light"/>
            <EditText
                android:inputType="textPassword"
                android:background="@null"
                android:layout_marginTop="12dp"
                android:id="@+id/et_login_pass"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="密码"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/item_size"/>

            <View
                android:layout_width="235dp"
                android:layout_height="1dp"
                android:background="@color/blue_light"/>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码？"
                    android:textColor="@color/blue_price"/>

                <TextView
                    android:id="@+id/tv_login_regi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册新用户"
                    android:textColor="@color/blue_light"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_login"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_marginTop="33dp"
                android:background="@mipmap/login_submit"
                android:text="登 录"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size"/>

            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View android:layout_height="1dp"
                      android:background="#ccc"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      tools:layout_editor_absoluteX="0dp"
                      tools:layout_editor_absoluteY="481dp"></View>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="使用第三方帐号登陆"
                    android:textColor="@color/blue_light"
                    tools:layout_editor_absoluteY="486dp"
                    tools:layout_editor_absoluteX="113dp" />

                <View android:layout_height="1dp"
                      android:background="#ccc"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      tools:layout_editor_absoluteX="0dp"
                      tools:layout_editor_absoluteY="481dp"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/loginqq"
                    tools:layout_editor_absoluteY="555dp"
                    tools:layout_editor_absoluteX="135dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/loginwx"
                    tools:layout_editor_absoluteY="555dp"
                    tools:layout_editor_absoluteX="189dp" />
            </LinearLayout>

        </LinearLayout>

    </com.ruiyihong.toyshop.view.MyScrollView>



</RelativeLayout>
