<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        style="@style/title_style">
        <ImageButton
            style="@style/back_style" />
        <TextView
            style="@style/title_textview_style"
            android:text="常用地址"/>
    </RelativeLayout>
    <ListView
        android:layout_marginTop="2dp"
        android:dividerHeight="2dp"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:id="@+id/lv_mine_address"
        ></ListView>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_address_nomore"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/address_pic"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写地址"
            android:textSize="@dimen/item_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="让我们第一时间找到您"
            android:textSize="@dimen/item_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_selected"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="添加新地址"
        android:textColor="@color/white"
        android:textSize="@dimen/item_size"/>
</LinearLayout>
