<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/hor_line"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">
    <RelativeLayout
        style="@style/title_style">
        <ImageButton
            android:id="@+id/back_pinglun"
            style="@style/back_style"/>
        <TextView
            android:id="@+id/tv_pinglun_title"
            style="@style/title_textview_style"
            android:text="发表评论"/>
        <TextView
            android:id="@+id/tv_pinglun_submit"
            android:textSize="@dimen/sub_title_size"
            android:layout_alignParentRight="true"
            android:text="发布"
            android:layout_alignBottom="@id/tv_pinglun_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.ruiyihong.toyshop.view.MyScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:paddingLeft="15dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:background="@color/Panda_BG"
               android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:src="@mipmap/find_book2"
                   android:id="@+id/iv_pinglun_icon"
                   android:layout_width="70dp"
                   android:layout_height="50dp"/>

               <RadioGroup
                   android:id="@+id/rg_pinglun"
                   android:layout_marginLeft="20dp"
                   android:layout_gravity="center_vertical"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <RadioButton
                       android:id="@+id/rb_pinglun_haoping"
                       android:background="@color/transparent"
                       android:textColor="@drawable/selector_tab_textcolor"
                       android:textSize="@dimen/item_size"
                       android:drawablePadding="10dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:button="@null"
                       android:text="好评"
                       android:drawableLeft="@drawable/haoping_selector"/>
                   <RadioButton
                       android:id="@+id/rb_pinglun_zhongping"
                       android:background="@color/transparent"
                       android:textColor="@drawable/selector_tab_textcolor"
                       android:textSize="@dimen/item_size"
                       android:drawablePadding="10dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:button="@null"
                       android:text="中评"
                       android:drawableLeft="@drawable/zhongping_selector"/>
                   <RadioButton
                       android:id="@+id/rb_pinglun_chaping"
                       android:background="@color/transparent"
                       android:textColor="@drawable/selector_tab_textcolor"
                       android:textSize="@dimen/item_size"
                       android:drawablePadding="10dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:button="@null"
                       android:text="差评"
                       android:drawableLeft="@drawable/chaping_selector"/>
               </RadioGroup>
           </LinearLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/Panda_BG">

               <EditText
                   android:id="@+id/et_pinpun_content"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:layout_marginTop="1dp"
                   android:background="@color/white"
                   android:gravity="top"
                   android:hint="宝贝满足你的期待吗？说说你的体验，分享给更多的想来租玩具图书的她们吧。"
                   android:lineSpacingExtra="5dp"
                   android:maxHeight="80dp"
                   android:maxLines="4"
                   android:paddingBottom="5dp"
                   android:paddingLeft="25dp"
                   android:paddingRight="25dp"
                   android:paddingTop="5dp"
                   android:textSize="12sp"/>
               <GridView
                   android:background="@null"
                   android:id="@+id/gv_pinglun_icon_changchuan"
                   android:layout_below="@id/et_pinpun_content"
                   android:layout_marginLeft="25dp"
                   android:layout_width="wrap_content"
                   android:layout_height="180dp"
                   android:layout_marginRight="10dp"
                   android:horizontalSpacing="10dp"
                   android:numColumns="3"
                   android:scrollbars="none"
                   android:verticalSpacing="5dp" >
               </GridView>
           </RelativeLayout>
           <LinearLayout
               android:background="@color/Panda_BG"
               android:paddingLeft="25dp"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <CheckBox
                   android:id="@+id/cb_pinglun_niming"
                   android:background="@color/transparent"
                   android:textSize="@dimen/item_size"
                   android:button="@null"
                   android:text="匿名"
                   android:drawableLeft="@drawable/niming_checkbox"
                   android:drawablePadding="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginLeft="30dp"
                   android:textSize="@dimen/item_size"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="你写的评论会以匿名的形式展示"/>
           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:paddingTop="15dp"
               android:paddingLeft="25dp"
               android:paddingBottom="15dp"
               android:background="@color/Panda_BG"
               android:layout_marginTop="7dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:textColor="@color/blue_dark"
                   android:textSize="@dimen/item_size"
                   android:text="体验评分"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <LinearLayout
                   android:paddingTop="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:textColor="@color/black"
                       android:textSize="15sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="物流评价"/>
                   <com.ruiyihong.toyshop.view.RatingBar
                       android:id="@+id/rt_pinglun_miaoshu1"
                       android:layout_marginLeft="25dp"
                       android:layout_width="wrap_content"
                       app:starImageSize="19dp"
                       app:starPadding="18dp"
                       app:starCount="5"
                       app:starEmpty="@drawable/rating_empty"
                       app:starFill="@drawable/rating_full"
                       android:clickable="false"
                       app:starStep="1"
                       android:stepSize="1"
                       android:layout_height="wrap_content"></com.ruiyihong.toyshop.view.RatingBar>
                   <TextView
                       android:layout_marginLeft="12dp"
                       android:layout_gravity="center"
                       android:id="@+id/tv_pinglun_miaoshu1_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

               <LinearLayout
                   android:paddingTop="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:textColor="@color/black"
                       android:textSize="15sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="服务评价"/>
                   <com.ruiyihong.toyshop.view.RatingBar
                       android:id="@+id/rt_pinglun_miaoshu2"
                       android:layout_marginLeft="25dp"
                       android:layout_width="wrap_content"
                       app:starImageSize="19dp"
                       app:starPadding="18dp"
                       app:starCount="5"
                       app:starEmpty="@drawable/rating_empty"
                       app:starFill="@drawable/rating_full"
                       android:clickable="false"
                       app:starStep="1"
                       android:stepSize="1"
                       android:layout_height="wrap_content"></com.ruiyihong.toyshop.view.RatingBar>
                   <TextView
                       android:layout_marginLeft="12dp"
                       android:layout_gravity="center"
                       android:id="@+id/tv_pinglun_miaoshu2_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
               <LinearLayout
                   android:paddingTop="18dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:textColor="@color/black"
                       android:textSize="15sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="描述评价"/>
                   <com.ruiyihong.toyshop.view.RatingBar
                       android:id="@+id/rt_pinglun_miaoshu3"
                       android:layout_marginLeft="25dp"
                       android:layout_width="wrap_content"
                       app:starImageSize="19dp"
                       app:starPadding="18dp"
                       app:starCount="5"
                       app:starEmpty="@drawable/rating_empty"
                       app:starFill="@drawable/rating_full"
                       android:clickable="false"
                       app:starStep="1"
                       android:stepSize="1"
                       android:layout_height="wrap_content"></com.ruiyihong.toyshop.view.RatingBar>
                   <TextView
                       android:layout_marginLeft="12dp"
                       android:layout_gravity="center"
                       android:id="@+id/tv_pinglun_miaoshu3_text"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
    </com.ruiyihong.toyshop.view.MyScrollView>

</LinearLayout>