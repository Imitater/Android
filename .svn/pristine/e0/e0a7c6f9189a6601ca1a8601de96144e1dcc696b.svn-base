<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景填充颜色值 -->
    <solid android:color="@color/red_light" />

    <!-- radius值越大，越趋于圆形 -->
    <corners android:radius="20dip" />

    <!-- 圆角图像内部填充四周的大小 ，将会以此挤压内部布置的view -->
    <padding
        android:left="4dip"
        android:right="4dip" />
</shape>