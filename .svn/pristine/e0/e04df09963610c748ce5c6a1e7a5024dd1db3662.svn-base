<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">



    <ImageView
        android:id="@+id/iv_close_pay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        app:layout_constraintLeft_toRightOf="@+id/iv_weixin"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:layout_width="302dp"
        android:layout_height="191dp"
        android:src="@mipmap/bg_pay2"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="185dp"
        android:id="@+id/imageView6" />


    <ImageView
        android:id="@+id/iv_zhifubao"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/zhifubao_zhifu"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/tv_pay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_bg_circle1"
        android:padding="10dp"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/item_size"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_weixin"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.497" />

    <ImageView
        android:id="@+id/iv_weixin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/weixin_zhifu"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintRight_toLeftOf="@+id/iv_zhifubao"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        android:layout_marginTop="58dp"
        app:layout_constraintHorizontal_bias="0.387" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay2_pic"
        android:layout_marginBottom="166dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        android:id="@+id/imageView7"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6" />
</android.support.constraint.ConstraintLayout>