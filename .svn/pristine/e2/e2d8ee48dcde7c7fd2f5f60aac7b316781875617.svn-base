<?xml version="1.0" encoding="utf-8"?>
<!--玩具城条目布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_toyshop_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@mipmap/product_love_pic"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_toyshop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_toyshop_image"
                android:layout_marginTop="5dp"
                android:text="0-3岁儿童益智玩具套餐0-3岁"
                android:maxLines="2"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/tv_toyshop_daypay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_toyshop_name"
                android:layout_marginTop="2dp"
                android:text="2.9元/天"
                android:textColor="@color/tab_selected"
                android:textSize="@dimen/item_size" />

            <TextView
                android:id="@+id/tv_diaopaijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_toyshop_daypay"
                android:layout_marginTop="1dp"
                android:background="@drawable/shap_rounded_rectangle_gray"
                android:padding="1dp"
                android:text="吊牌价:"
                android:textSize="@dimen/smaller_size"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_toyshop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_toyshop_daypay"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/tv_diaopaijia"
                android:text="388元"
                android:textSize="@dimen/smaller_size"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_toyshop_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_toyshop_price"
                android:layout_marginTop="3dp"
                android:background="@drawable/shap_rounded_rectangle_red"
                android:padding="1dp"
                android:text="HOT"
                android:textSize="8sp"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_toyshop_canpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_toyshop_hot"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_toyshop_hot"
                android:background="@drawable/shap_rounded_rectangle_green"
                android:padding="1dp"
                android:text="可邮寄"
                android:textSize="8sp"
                android:textColor="#fff" />

            <ImageButton
                android:id="@+id/ib_shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/tv_toyshop_canpost"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@mipmap/shopping_cart_yellow1" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>