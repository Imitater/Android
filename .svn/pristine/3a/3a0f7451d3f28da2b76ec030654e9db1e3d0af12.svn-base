<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_order_item_shopname"
            android:drawablePadding="18dp"
            android:text="TB玩图汇"
            android:drawableRight="@mipmap/right_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_order_item_status"
            android:textColor="@color/blue_dark"
            android:layout_alignParentRight="true"
            android:text="交易已完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="25dp"
            android:id="@+id/ll_order_item_info"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:text="共"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_order_item_num"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:text="件商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="合计: ¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_order_item_money"
                android:layout_marginLeft="5dp"
                android:text="12.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:text="(含运费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/tv_order_item_yunfei"
                android:text="10.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:text=")"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_below="@id/ll_order_item_info"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingRight="15dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_order_item_take1"
                android:layout_marginRight="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="删除订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seares_normal"/>
            <TextView
                android:id="@+id/tv_order_item_take2"
                android:layout_marginRight="15dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="删除订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seares_normal"/>
            <TextView
                android:id="@+id/tv_order_item_take3"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="删除订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/seares_normal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>