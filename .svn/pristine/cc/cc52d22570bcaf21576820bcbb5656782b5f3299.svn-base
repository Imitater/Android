<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_order_con_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@mipmap/order_content_empty"
            android:scaleType="matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/tv_order_con_null"
            android:layout_alignRight="@+id/tv_order_con_cho0se"
            android:layout_alignEnd="@+id/tv_order_con_cho0se"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tv_order_con_null"
            android:layout_centerInParent="true"
            android:textSize="@dimen/item_size"
            android:text="您还没有下订单哦"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_order_con_null"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_title_size"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="去选宝贝"
            android:background="@drawable/choose_button"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_con_cho0se"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcy_order_con"></android.support.v7.widget.RecyclerView>
</RelativeLayout>