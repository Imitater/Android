<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Panda_BG">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Panda_BG"/>

    <TextView
        android:id="@+id/loading_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="" />

    <LinearLayout
        android:id="@+id/load_error_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/nowifi"
            android:text="您的网络有问题\n 点击重新加载"/>
        <ImageButton
            android:id="@+id/iv_refresh_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/refresh_button"/>

    </LinearLayout>
</FrameLayout>