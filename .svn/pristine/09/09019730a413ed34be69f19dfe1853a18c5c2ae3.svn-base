<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_vip_detail">
    <com.ruiyihong.toyshop.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                style="@style/title_style">
                <TextView
                    style="@style/title_textview_style"
                    android:text="会员卡购买"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_vip_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vip_line"
                android:padding="15dp"
                android:text="会员卡详情"
                android:textColor="@color/grad_dark"
                android:background="@color/white"
                android:textSize="@dimen/sub_title_size"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/vip_line"
                android:padding="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购买会员卡账户"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title_size"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/event_bg_circle1"
                        />
                    <TextView
                        android:id="@+id/tv_vip_detail_uname"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="uname"
                        android:textColor="@color/red_light"
                        android:textSize="@dimen/sub_title_size"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/vip_line"
                android:padding="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="会员详细权限"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_title_size"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_vip_quanxian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:text="选择支付方式"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="@dimen/sub_title_size"
                />

            <TextView
                android:drawableLeft="@mipmap/weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="15dp"
                android:text="选择支付方式"
                android:textColor="@color/grad_dark"
                android:background="@color/white"
                android:textSize="@dimen/sub_title_size"
                />

            <TextView
                android:drawableLeft="@mipmap/zhifubao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="15dp"
                android:text="选择支付方式"
                android:textColor="@color/grad_dark"
                android:background="@color/white"
                android:textSize="@dimen/sub_title_size"
                />
        </LinearLayout>
    </com.ruiyihong.toyshop.view.MyScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grad_light"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="合计："
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"/>
        <TextView
            android:padding="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0元"
            android:textSize="@dimen/title_size"
            android:textColor="@color/red_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tab_selected"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:text="立即支付"
            android:textSize="@dimen/title_size"
            android:textColor="@color/red_light"/>
    </LinearLayout>
</LinearLayout>