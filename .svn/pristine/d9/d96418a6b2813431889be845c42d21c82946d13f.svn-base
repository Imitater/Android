<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Panda_BG"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cancel_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hetght"
        android:drawableLeft="@mipmap/chahao"
        android:gravity="center"
        android:padding="15dp"
        android:text="立即支付"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tv_total_Money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="￥200"
        android:textSize="@dimen/big_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="余额支付"
                android:textSize="@dimen/sub_title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="微信支付"
                android:textSize="@dimen/sub_title_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="支付宝支付"
                android:textSize="@dimen/sub_title_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/Rg_pay_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/ck_yu_e_pay"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

                <RadioButton
                    android:id="@+id/ck_wx_pay"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

                <RadioButton
                    android:id="@+id/ck_zfb_pay"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RadioGroup>




        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/bt_now_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/tab_selected"
        android:text="立即付款"
        android:textSize="@dimen/title_size" />


</LinearLayout>