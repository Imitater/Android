<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="玩具品牌"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/tab_selected"/>
        <TextView
            android:id="@+id/product_info_rv_item_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="hape"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/main_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="品牌所属"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/tab_selected"/>
        <TextView
            android:id="@+id/product_info_rv_item_brandplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="德国"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/main_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="玩具材质"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/tab_selected"/>
        <TextView
            android:id="@+id/product_info_rv_item_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="进口榉木 橡胶木 荷木 椴木"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/main_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="玩具重量"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/tab_selected"/>
        <TextView
            android:id="@+id/product_info_rv_item_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="1.5kg"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/main_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="包装规格"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/tab_selected"/>
        <TextView
            android:id="@+id/product_info_rv_item_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="30.6CM"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/main_light"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="消毒方式"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/tab_selected"/>
        <TextView
            android:id="@+id/product_info_rv_item_disinfect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="酒精"
            android:textSize="@dimen/item_size"
            android:textColor="@color/black"
            android:background="@color/main_light"/>
    </LinearLayout>
</LinearLayout>