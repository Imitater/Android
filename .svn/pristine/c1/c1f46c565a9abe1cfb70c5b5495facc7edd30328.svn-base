<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        style="@style/class_cardview">
        <LinearLayout
            style="@style/class_LinearLayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_class_bg_item"
                    style="@style/class_imageview"
                    android:layout_height="150dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_class_bg_head_blue"
                    android:text="新品"
                    android:textColor="#fff"
                    android:background="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/tv_class_bg_head_red"
                    android:text="Hot"
                    android:visibility="gone"
                    android:textColor="#fff"
                    android:background="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    style="@style/class_iv_play"
                    android:background="@mipmap/item_play"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_class_bg_buttom"
                style="@style/class_textview"
                android:text="这个是底部"
                android:textColor="@color/black"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>



</FrameLayout>