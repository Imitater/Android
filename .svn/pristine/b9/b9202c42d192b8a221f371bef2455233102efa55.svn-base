<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingTop="7dp"
              android:paddingBottom="7dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_order_shop_icon"
        android:layout_marginLeft="11dp"
        android:background="@mipmap/find_book2"
        android:layout_width="85dp"
        android:layout_height="80dp"/>
    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_shop_name"
            android:textSize="13sp"
            android:text="大型儿童玩具，编号15212311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_order_shop_chandi"
            android:layout_marginTop="2dp"
            android:text="德国进口"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_order_shop_age"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:text="适合年龄："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:paddingTop="4dp"
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_shop_danjia"
            android:paddingRight="8dp"
            android:layout_gravity="right"
            android:textColor="@color/red"
            android:text="2.5/天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_order_shop_diaopai"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray"
            android:text="吊牌价：330"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_order_shop_geshu"
            android:paddingRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:text="x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>