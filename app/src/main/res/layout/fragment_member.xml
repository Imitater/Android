<?xml version="1.0" encoding="utf-8"?>
<!--会员 fragemnt-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/car_yajin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退押金" />

                <Button
                    android:id="@+id/car_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加网络购物车" />

                <Button
                    android:id="@+id/car_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除网络购物车" />

                <Button
                    android:id="@+id/car_query"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询网络购物车" />

                <Button
                    android:id="@+id/car_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改网络购物车" />

                <Button
                    android:id="@+id/car_Activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车Activity" />

                <Button
                    android:id="@+id/bt_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论" />

                <Button
                    android:id="@+id/bt_erweima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二维码" />

                <Button
                    android:id="@+id/bt_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义吐司" />

                <Button
                    android:id="@+id/bt_djq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代金券" />

                <TextView
                    android:id="@+id/tv_erweima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二维码显示：" />

                <Button
                    android:id="@+id/bt_dingdan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试订单" />

                <Button
                    android:id="@+id/bt_wxfx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信分享" />

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="data：显示" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/wx_sq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="玩具汇" />

                <Button
                    android:id="@+id/qq_sq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书汇" />

                <Button
                    android:id="@+id/loin_activiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆界面" />

                <Button
                    android:id="@+id/add_shoppingcar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加购物车" />

                <Button
                    android:id="@+id/add_personinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息" />

                <Button
                    android:id="@+id/add_vitamio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付" />

                <Button
                    android:id="@+id/Map_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地图" />

                <Button
                    android:id="@+id/Contact_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人" />


                <Button
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放视频页面" />

                <Button
                    android:id="@+id/audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放图书页面" />

                <Button
                    android:id="@+id/vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vip页面" />

                <Button
                    android:id="@+id/toy_suit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套餐详情页面" />

                <Button
                    android:id="@+id/toy_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="玩具详情页面" />

                <Button
                    android:id="@+id/test_network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试网络" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>