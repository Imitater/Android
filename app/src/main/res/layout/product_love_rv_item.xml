<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/hor_line"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"><!--
        <com.ruiyihong.toyshop.view.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_product_love_rv_item"
            ryh:ir="@mipmap/product_love_pic" />-->
            <ImageView
                android:id="@+id/iv_product_love_rv_item"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="@mipmap/product_love_pic"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_product_love_rv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="翘翘船 hape原装德国进口......"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_product_love_rv_item_rent_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="30.6元/天"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_product_love_rv_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="吊牌价：5000元"
                android:textColor="@color/grad"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>