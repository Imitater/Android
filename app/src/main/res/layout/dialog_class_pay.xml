<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close"
        android:id="@+id/imageView8"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_pay"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView10"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="145dp" />

    <ImageView
        android:id="@+id/iv_zhuyi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/pay_zhuyi"
        android:layout_above="@+id/tv_pay"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView11" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="此视频为付费视频"
        android:layout_above="@+id/imageView11"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="@+id/iv_zhuyi"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/iv_zhuyi"
        app:layout_constraintHorizontal_bias="0.455"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.974" />

    <TextView
        android:id="@+id/tv_pay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_bg_circle1"
        android:padding="10dp"
        android:text="点击购买"
        android:textColor="@color/white"
        android:textSize="@dimen/item_size"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/radish_pay"
        android:layout_above="@+id/tv_pay1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView10"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.293"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.558"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay1_pic"
        android:id="@+id/imageView9"
        android:layout_below="@+id/imageView8"
        android:layout_alignLeft="@+id/tv_pay"
        android:layout_alignStart="@+id/tv_pay"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        android:layout_marginBottom="288dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        android:layout_marginRight="84dp" />

    <TextView
        android:id="@+id/tv_pay1_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/tab_selected"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:text="元"
        android:textColor="@color/red"
        android:textSize="@dimen/item_size"
        app:layout_constraintLeft_toRightOf="@+id/tv_pay1_money"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_pay1_money"
        android:layout_marginTop="8dp"
        android:layout_marginRight="0dp" />
</android.support.constraint.ConstraintLayout>