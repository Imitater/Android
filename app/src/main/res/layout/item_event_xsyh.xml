<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_product_pic"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xsyh_pic"/>

                <ImageView
                    android:id="@+id/iv_new"
                    android:layout_alignLeft="@id/iv_product_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xsyh_new"/>

                <ImageView
                    android:id="@+id/iv_qiang"
                    android:layout_alignRight="@id/iv_product_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xsyh_qiang"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"
                android:lines="1"
                android:layout_marginRight="10dp"
                android:text="0-3岁儿童有益智玩具套装0000"/>
            <TextView
                android:id="@+id/tv_product_price"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.9/天"
                android:textSize="@dimen/title_size"
                android:textColor="@color/red"/>
            <RelativeLayout
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吊牌价:"
                    android:textSize="@dimen/item_size"
                    android:padding="2dp"
                    android:textColor="@color/grad_dark"
                    android:background="@mipmap/bg_tv_youhui"/>
                <TextView
                    android:id="@+id/tv_product_dpj"
                    android:layout_toRightOf="@id/tv1"
                    android:padding="3dp"
                    android:textSize="@dimen/item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="338元"
                    android:textColor="@color/grad_dark"/>
                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_bg_circle_red"
                    android:text="HOT"
                    android:padding="3dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_baoyou"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_below="@id/tv1"
                    android:layout_toRightOf="@id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/event_bg_circle_green"
                    android:text="可邮寄"
                    android:padding="3dp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/iv_item_shopcar"
                    android:layout_alignParentRight="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/shop_car"

                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>