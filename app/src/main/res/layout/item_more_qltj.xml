<?xml version="1.0" encoding="utf-8"?><!--最新玩具，最新图书条目布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_toy_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/item_image_bg" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/image_zbtj" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_toy_image"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    >

                    <TextView
                        android:id="@+id/tv_toyshop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lines="2"
                        android:text="0-3岁儿童益智玩具套餐"
                        android:textSize="@dimen/small_size"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_toyshop_daypay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_toyshop_name"
                        android:background="@drawable/shap_round_rectangle_orange"
                        android:paddingBottom="1dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:text="2.9元/天"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_diaopaijia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_toyshop_daypay"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@id/tv_toyshop_daypay"
                        android:padding="1dp"
                        android:text="吊牌价:388元"
                        android:textColor="@color/grad"
                        android:textSize="@dimen/smaller_size" />

                    <TextView
                        android:id="@+id/tv_toyshop_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_toyshop_daypay"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/shap_rounded_rectangle_red"
                        android:padding="1dp"
                        android:text="HOT"
                        android:textColor="#fff"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_toyshop_canpost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_toyshop_hot"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/tv_toyshop_hot"
                        android:background="@drawable/shap_rounded_rectangle_green"
                        android:padding="1dp"
                        android:text="可邮寄"
                        android:textColor="#fff"
                        android:textSize="8sp" />
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <ImageButton
                        android:id="@+id/ib_shopping_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="bottom"
                        android:background="@mipmap/add_shopping_cart_red"
                        />
                </FrameLayout>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
