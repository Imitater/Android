<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/item_size"
        android:drawableLeft="@mipmap/search_hot"
        android:drawablePadding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索"/>
    <com.ruiyihong.toyshop.view.FlowLayout
        android:layout_marginTop="5dp"
        app:mxLine="3"
        app:lineSpacing="10dp"
        android:id="@+id/fl_hot_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.ruiyihong.toyshop.view.FlowLayout>
    <View
        android:background="@color/hor_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/item_size"
            android:drawableLeft="@mipmap/search_history"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史搜索"/>
        <TextView
            android:id="@+id/tv_search_history_delete"
            android:textSize="@dimen/item_size"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/search_history_delete"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_search_history"
        android:layout_marginTop="10dp"
        android:divider="@color/hor_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>
</LinearLayout>