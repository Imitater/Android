<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_enter_video">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="220dp"
        android:layout_marginTop="200dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="135dp">
            <VideoView
                android:id="@+id/vv_enter"
                android:layout_width="match_parent"
                android:layout_height="135dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vv_enter"
                android:layout_alignBottom="@+id/vv_enter"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vv_enter"
                android:background="@mipmap/bg_enter_video_tv"/>
            <include layout="@layout/enter_video_bottom"
                android:layout_alignBottom="@+id/iv_video"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_enter_video_up"
                android:layout_marginLeft="10dp"
                android:background="@drawable/event_bg_circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="选择视频"
                android:textColor="@color/white"
                android:textSize="@dimen/item_size"/>
            <SeekBar
                android:id="@+id/sb_enter_video"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/event_bg_circle1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孩子姓名:"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_child_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"/>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/event_bg_circle1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="孩子年龄:"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_child_age"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"/>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/event_bg_circle1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长姓名:"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_parent_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"/>
        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/event_bg_circle1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长手机号:"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_phone"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_size"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_marginTop="20dp"
            android:background="@drawable/event_bg_circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="点击提交"
            android:textColor="@color/white"
            android:textSize="@dimen/item_size"/>
    </LinearLayout>

</RelativeLayout>