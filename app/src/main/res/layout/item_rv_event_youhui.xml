<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:background="@color/white"
        app:cardMaxElevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_item_event_youhui"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/event_youhui_pic1"
                android:scaleType="center"/>
            <TextView
                android:padding="3dp"
                android:text="1.9/天"
                android:textColor="@color/white"
                android:textSize="@dimen/item_size"
                android:background="@color/bg_tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_event_youhui"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cv"
        android:id="@+id/rl_item_event_youhui"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/event_youhui_ib"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马上去租"
            android:textSize="@dimen/item_size"
            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>