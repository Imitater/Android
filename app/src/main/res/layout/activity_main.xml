<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiyihong.toyshop.activity.MainActivity">

    <com.ruiyihong.toyshop.view.NoScrollViewPager
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/divider"
        ></View>


    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Panda_BG"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/MainRadioButtonStyle"
            android:drawableTop="@drawable/selector_tab_home"
            android:text="首页" />
        <RadioButton
            android:id="@+id/rb_find"
            style="@style/MainRadioButtonStyle"
            android:drawableTop="@drawable/selector_tab_find"
            android:text="发现" />
        <RadioButton
            android:id="@+id/rb_jifen_shop"
            style="@style/MainRadioButtonStyle"
            android:drawableTop="@drawable/selector_tab_jifenshop"
            android:text="积分商城" />

        <RadioButton
            android:id="@+id/rb_shopping_cart"
            style="@style/MainRadioButtonStyle"
            android:drawableTop="@drawable/selector_tab_shoppingchart"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/MainRadioButtonStyle"
            android:drawableTop="@drawable/selector_tab_mine"
            android:text="我的" />

    </RadioGroup>


</LinearLayout>
