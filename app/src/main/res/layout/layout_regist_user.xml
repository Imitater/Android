<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/login_background"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:paddingTop="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_white"
            android:layout_marginLeft="10dp"
            android:padding="20dp"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:layout_margin="15dp"
            android:text="注册"
            />
    </RelativeLayout>


    <View android:layout_height="1dp"
        android:background="#ccc"
        android:layout_width="match_parent"/>

    <EditText
        style="@style/EditText_style"
        android:layout_marginTop="60dp"
        android:id="@+id/et_regi_phone"
        android:hint="输入手机号"
        android:inputType="number" />

    <View
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_width="275dp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        style="@style/AlertWidth"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                style="@style/EditText_style"
                android:id="@+id/et_regi_yzm"
                android:hint="输入验证码"
                android:layout_marginRight="10dp"
                android:inputType="number" />


            <View android:layout_height="1dp"
                android:background="#ccc"
                  android:layout_marginTop="2dp"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <!--需要这样一个界面，点击后六十秒才能用-->
        <TextView
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/regist_button"
            android:id="@+id/send_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="#fff"
            android:textSize="10sp"/>

    </LinearLayout>
    <EditText
        style="@style/EditText_style"
        android:layout_marginTop="30dp"
        android:id="@+id/et_regi_pass"
        android:hint="输入密码"
        android:inputType="textPassword"/>

    <View android:layout_height="1dp"
        android:background="#ccc"
          android:layout_marginTop="2dp"
        android:layout_width="275dp"/>
    <EditText
        style="@style/EditText_style"
        android:layout_marginTop="30dp"
        android:id="@+id/et_regi_repass"
        android:hint="再次输入密码"
        android:inputType="textPassword" />

    <View android:layout_height="1dp"
        android:background="#ccc"
          android:layout_marginTop="2dp"
        android:layout_width="275dp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="20dp">
        <TextView
            android:textColor="@color/blue_dark"
            android:id="@+id/regi_yiyouZH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有帐号？"/>


        <TextView
            android:id="@+id/now_login"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"/>

    </RelativeLayout>


    <Button
        android:id="@+id/bt_regit_regi"
        style="@style/AlertWidth"
        android:background="@drawable/radiu_shape"
        android:layout_width="270dp"
        android:layout_marginTop="80dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:text="立即注册" />

        <TextView
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/small_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="于久壹（河北）教育科技有限公司"/>
</LinearLayout>