<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:padding="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_select_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7.0dip"
        >
        <TextView
            android:id="@+id/tv_select_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="从相册选择"
            android:textColor="#ff797979"
            android:textSize="14.0sp" />
        <TextView
            android:id="@+id/tv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="图片"
            android:textSize="@dimen/small_size"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/hor_line" />

    <RelativeLayout
        android:id="@+id/rl_select_video"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7.0dip"
        >
        <TextView
            android:id="@+id/tv_select_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="从相册选择"
            android:textColor="#ff797979"
            android:textSize="14.0sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="视频"
            android:textSize="@dimen/small_size"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/hor_line" />

    <RelativeLayout
        android:id="@+id/rl_select_shot"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7.0dip"
        >
        <TextView
            android:id="@+id/tv_select_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="拍摄"
            android:textColor="#ff797979"
            android:textSize="14.0sp" />
        <TextView
            android:id="@+id/tv_video_or_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="视频"
            android:textSize="@dimen/small_size"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_select_shot_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7.0dip"
        >
        <TextView
            android:id="@+id/tv_select_shot_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="拍摄"
            android:textColor="#ff797979"
            android:textSize="14.0sp" />
        <TextView
            android:id="@+id/tv__pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="照片"
            android:textSize="@dimen/small_size"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</LinearLayout>