            </RelativeLayout>

            <View
                android:background="#f4f4f4"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <RelativeLayout
                android:background="@color/mine_item"
                android:id="@+id/rl_mine_vip"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_mine_vip"
                    android:background="@mipmap/mine_order"
                    style="@style/mime_item_iv"/>
                <TextView
                    style="@style/mine_item_tv"
                    android:text="我的订单"
                    android:layout_toRightOf="@+id/iv_mine_vip"
                    android:layout_toEndOf="@+id/iv_mine_vip"/>
                <ImageView
                    android:id="@+id/iv_vip_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/goto_right"
                    android:layout_width="15dp"
                    android:layout_height="13dp"/>
            </RelativeLayout>
            <View
                android:background="@color/hor_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:background="@color/mine_item"
                android:id="@+id/rl_mine_youhuiquan"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_mine_youhuiquan"
                    android:background="@mipmap/mine_youhuiquan"
                    style="@style/mime_item_iv"/>
                <TextView
                    style="@style/mine_item_tv"
                    android:text="我的优惠券"
                    android:layout_toRightOf="@+id/iv_mine_youhuiquan"
                    android:layout_toEndOf="@+id/iv_mine_youhuiquan"/>
                <ImageView
