                android:background="@color/mine_item"
                android:id="@+id/rl_mine_question"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_mine_question"
                    android:background="@mipmap/mine_question"
                    style="@style/mime_item_iv"/>
                <TextView
                    style="@style/mine_item_tv"
                    android:text="常见问题"
                    android:layout_toRightOf="@+id/iv_mine_question"
                    android:layout_toEndOf="@+id/iv_mine_question"/>
                <ImageView
                    android:id="@+id/iv_question_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/goto_right"
                    android:layout_width="15dp"
                    android:layout_height="13dp"/>
            </RelativeLayout>
            <View
                android:background="@color/hor_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:background="@color/mine_item"
                android:id="@+id/rl_mine_share"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_mine_share"
                    android:background="@mipmap/mine_share"
                    style="@style/mime_item_iv"/>
                <TextView
                    style="@style/mine_item_tv"
                    android:text="分享有礼"
                    android:layout_toRightOf="@+id/iv_mine_share"
                    android:layout_toEndOf="@+id/iv_mine_share"/>

                <ImageView
                    android:id="@+id/iv_share_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/goto_right"
                    android:layout_width="15dp"
                    android:layout_height="13dp"/>
                <TextView
                    android:textSize="@dimen/small_size"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_share_right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="邀请好友享好礼"/>
            </RelativeLayout>
            <View
                android:background="@color/hor_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:background="@color/mine_item"
                android:id="@+id/rl_mine_collect"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_mine_collect"
                    android:background="@mipmap/mine_collect"
