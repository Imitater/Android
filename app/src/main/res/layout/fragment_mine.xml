                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/mine_ljdl"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="立即登录"
                    android:textColor="#fff"
                    android:textSize="@dimen/sub_title_size"/>

                <RelativeLayout
                    android:id="@+id/rl_mine_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:visibility="invisible">

                    <com.ruiyihong.toyshop.view.CircleImageView
                        android:id="@+id/iv_head_icon"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="120dp"
                        android:src="@mipmap/personinfo_head_icon"
                        app:civ_border_overlay="false"
                        app:civ_border_width="0dp"
                        app:civ_fill_color="#fff"/>

                    <com.ruiyihong.toyshop.view.CircleImageView
                        android:id="@+id/iv_vip_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@+id/iv_head_icon"
                        android:layout_alignEnd="@+id/iv_head_icon"
                        android:layout_alignRight="@+id/iv_head_icon"
                        android:src="@mipmap/vip_icon_putong"
                        app:civ_border_overlay="false"
                        app:civ_border_width="0dp"
                        app:civ_fill_color="@color/transparent"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/iv_head_icon"
                        android:layout_toRightOf="@+id/iv_head_icon">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_mine_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="宝宝喵喵**********"
                                android:textSize="@dimen/title_size"/>

                            <TextView
                                android:id="@+id/tv_mine_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="请完善宝宝信息"
                                android:textColor="#d7d8da"
                                android:textSize="@dimen/small_size"
                                />
                        </LinearLayout>
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/ib_mine_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:background="@mipmap/goto_right"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_viptype_other"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_viptime_mine"
                            android:gravity="center_horizontal"
                            android:text="200天"
                            android:textColor="@color/red"
                            android:textSize="@dimen/title_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_viptype_mine"
                            android:gravity="center_horizontal"
                            android:text="剩余时间"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/ll_viptype_cika"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_vipmoney_mine"
                            android:gravity="center_horizontal"
                            android:text="200元"
                            android:textColor="@color/red"
                            android:textSize="@dimen/title_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:text="我的押金"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </RelativeLayout>
