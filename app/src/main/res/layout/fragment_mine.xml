                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_mine_address"
                    android:background="@mipmap/mine_address"
                    style="@style/mime_item_iv"/>
                <TextView
