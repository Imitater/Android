<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/title_style">

            <ImageButton
                style="@style/back_style"/>
            <TextView
                android:text="我的押金"
                style="@style/title_textview_style"/>
        </RelativeLayout>

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/get_yajin_head_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:background="#fff"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sub_title_size"
                android:padding="10dp"
                android:text="已交押金："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_get_yajin_money"
                android:background="#fff"
                android:textSize="@dimen/sub_title_size"
                android:paddingTop="10dp"
                android:text="500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="#fff"
                android:textSize="@dimen/sub_title_size"
                android:paddingTop="10dp"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:background="#fff"
            android:layout_marginTop="4dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:text="退押金规则:"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:lineSpacingExtra="5dp"
            android:background="#fff"
            android:paddingTop="15dp"
            android:paddingBottom="40dp"
            android:paddingLeft="20dp"
            android:text="1.玩具租期借归还不出现任何损坏，即可全额退款。\n2.押金退款申请系统将在24小时内处理，方便快捷。\n3.没有未缴清费用。"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_get_yajin_submit"
        android:textSize="@dimen/title_size"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请退款"
        android:background="@color/tab_selected"/>
</RelativeLayout>