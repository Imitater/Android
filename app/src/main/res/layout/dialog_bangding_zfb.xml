<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="40%h"
        app:layout_widthPercent="100%w"
        android:layout_centerInParent="true"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:background="@mipmap/dialog_bangding_bg"
        >
            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入支付宝账号"
                android:textSize="@dimen/title_size"
                android:textColor="@color/text_color"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="21%"
                />
            <EditText
                android:id="@+id/et_input_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_edittext_bangding_zfb"
                app:layout_marginLeftPercent="10%"
                app:layout_marginRightPercent="10%"
                app:layout_marginTopPercent="10%"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:layout_below="@id/tv_dialog_title"/>

            <Button
                android:id="@+id/btn_insure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认绑定"
                android:background="@mipmap/bangding_btn_bg"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/et_input_zfb"
                android:layout_centerHorizontal="true"/>


    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>